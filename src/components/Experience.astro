const EXPERIENCE = [
    {
        date: "Feberero 2023  - Actualmente ... ",
        title: "Desarrollador JAVA",
        company: "Seguros Alfa",
        description:
            "Desarrollo microservicios con Java Spring Boot y gestionando herramientas de Amazon AWS como Lambdas, Step Functions, CloudWatch, API Gateway, DynamoDB y Glue DataBrew. Además, implementé pruebas unitarias con JUnit para garantizar la calidad del software.",
    },
    {
        date: "Junio 2021 - Enero 2023",
        title: "Desarrollador de software",
        company: "Linexperts",
        description:
            "Lider en el desarrollo de un aplicativo web para el registro de actividades utilizando JavaScript, ReactJS y Axios, así como en la creación de microservicios con Java Spring Boot y NodeJS. También gestioné bases de datos en PostgreSQL y MongoDB, utilicé GitHub para el control de versiones y realicé el seguimiento de tareas con JIRA.",
    },
    {
        date: "Diciembre 2020 - Junio 2021",
        title: "Aprendiz SENA",
